<odoo>
    <record id="so_approval_action" model="ir.actions.act_window">
        <field name="name">SO Approval</field>
        <field name="res_model">sale.order</field>
<!--        <field name="inherit_id" ref="sale.action_orders"/>-->
        <field name="view_mode">tree,form</field>
    </record>

    <record id="so_approval_from" model="ir.ui.view">
        <field name="name">sale.order.approval</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//form/header/field[@name='state']" position="attributes">
                 <attribute name="statusbar_visible">draft,to_approve,sent,sale</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="after">
                <field name="flag" invisible="1"/>
            </xpath>
            <xpath expr="//form/header/button[@name='action_confirm'][2]" position="attributes">
                <attribute name="attrs">{'invisible':['|',('flag', '=', 1), ('state', 'not in', ['draft'])]}</attribute>
            </xpath>
            <xpath expr="//form/header/button[@name='action_quotation_send']" position="after">
                <button name="button_send_to_manager" type="object" string="Send to Manager" attrs="{'invisible':['|', ('flag', '=', 0), ('state', 'not in', ['draft'])]}" groups="so_approval.group_salesperson,so_approval.group_manager"/>
            </xpath>
            <xpath expr="//form/header/button[@name='action_quotation_send']" position="attributes">
                <attribute name="states"></attribute>
                <attribute name="attrs">{'invisible':['|',('flag', '=', 1), ('state', 'not in', ['draft'])]}</attribute>
            </xpath>
            <xpath expr="//form/header/button[@name='action_confirm']" position="before">
                <button name="button_approve" class="oe_highlight" string="Approve" type="object" groups="so_approval.group_manager" states="to_approve"/>
            </xpath>
            <xpath expr="//form/header/button[@name='button_approve']" position="after">
                <button name="button_reject" string="Reject" type="object" groups="so_approval.group_manager" states="to_approve"/>
            </xpath>
        </field>
    </record>
    <menuitem id="so_approval_root" name="SO Approval" sequence="3"/>
    <menuitem id="so_approval_menu" name="SO Approval" action="so_approval_action" parent="so_approval_root"/>
</odoo>