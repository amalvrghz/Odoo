<odoo>
     <record id="academic_year_tree" model="ir.ui.view">
        <field name="name">Academic Year</field>
        <field name="model">academic.year</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="academic_year_form" model="ir.ui.view">
        <field name="name">Academic Year</field>
        <field name="model">academic.year</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
