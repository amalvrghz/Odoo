<odoo>
    <record id="exam_type_tree" model="ir.ui.view">
        <field name="name">Exam Types</field>
        <field name="model">exam.types</field>
        <field name="arch" type="xml">
            <tree>
            <field name="type"/>
            </tree>
        </field>
    </record>
    <record id="exam_type_form" model="ir.ui.view">
        <field name="name">Exam Types</field>
        <field name="model">exam.types</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>