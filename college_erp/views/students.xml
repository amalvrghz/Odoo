<!--       Views  of College Student        -->

    <record id="student_tree" model="ir.ui.view">
        <field name="name">Students</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="admission_no"/>
                <field name="first_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="admission_date"/>
            </tree>
        </field>
    </record>
    <record id="student_form" model="ir.ui.view">
        <field name="name">Students</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="pending,done"/>
                    <button name="button_create" string="Create Student" states="pending" class="oe_highlight" type="object"/>
                </header>
                <sheet>
                    <group>
                    <group>
                        <field name="first_name"/>
                    </group>
                    <group>
                        <field name="last_name"/>
                    </group>
                    </group>
                    <notebook>
                        <page string="Personal Details">
                           <group>
                            <group>
                                <field name="father"/>
                                <field name="mother"/>
                            </group>
                             <group>
                                <field name="phone"/>
                                <field name="email"/>
                             </group>
                            <group>
                                <field name="communication_address"/>
                                <field name="permanent_address" attrs="{'invisible': [('same_as','=',True)]}"/>
                                <field name="same_as"/>
                            </group>
                           </group>
                        </page>
                        <page string="Educational Details">
                            <group>
                                <group>
                                    <field name="class_id"/>
                                    <field name="course_id"/>
                                    <field name="semesters_id"/>
                                    <field name="academic_yr_id"/>
                                </group>
                                <group>
                                    <field name="admission_no" readonly="1"/>
                                    <field name="admission_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--         All  Menus        -->
    <menuitem id="college_menu_root" name="College ERP">
        <menuitem id="student_menu" name="Students" sequence="1" action="student_action"/>
        <menuitem id="configuration_menu" name="Configuration" sequence="6">
            <menuitem id="academic_year_menu" name="Academic Year" action="ac_year_action"/>
            <menuitem id="exam_types_menu" name="Exam Types" action="exam_type_action"/>
            <menuitem id="semester_menu" name="Semesters" action="semester_action"/>
            <menuitem id="course_menu" name="Course" action="course_action"/>
            <menuitem id="mark_sheet_menu" name="Marksheets" action="mark_sheet_action"/>
        </menuitem>
        <menuitem id="admission_menu" name="Admission" sequence="2" action="admission_action"/>
        <menuitem id="exam_menu" name="Exams" sequence="4">
            <menuitem id="exam_menu_child" name="Exams" action="college_exam_action"/>
            <menuitem id="promotion_menu" name="Promotion" action="promotion_action"/>
        </menuitem>
        <menuitem id="cls_menu" name="Class" sequence="3" action="cls_action"/>
        <menuitem id="mark_reports_menu" name="Reports" groups="base.group_user" sequence="5">
            <menuitem id="marksheet_reports_menu" name="Marksheet" action="action_mark_sheet_wizardd"/>
        </menuitem>
    </menuitem>

