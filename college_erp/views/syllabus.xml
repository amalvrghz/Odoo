<odoo>
    <record id="syllabus_tree" model="ir.ui.view">
        <field name="name">Syllabus</field>
        <field name="model">course.syllabus</field>
        <field name="arch" type="xml">
            <tree>
                <field name="subject"/>
                <field name="max_marks"/>
            </tree>
        </field>
    </record>
    <record id="syllabus_form" model="ir.ui.view">
        <field name="name">Syllabus</field>
        <field name="model">course.syllabus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="subject"/>
                        <field name="max_marks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>