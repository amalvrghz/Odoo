    <menuitem id="settings_first_level_menu" parent="estate_menu_root" name="Setttings"/>
    <menuitem id="partners_menu" parent="settings_first_level_menu" action="res_partner_action_customer"/>
    <menuitem id="users_menu" parent="settings_first_level_menu" action="action_res_userss"/>
    <menuitem id="property_type_menu_action" parent="settings_first_level_menu" action="property_type_action"/>
    <menuitem id="property_tag_menu_action" parent="settings_first_level_menu" action="property_tag_action"/>
