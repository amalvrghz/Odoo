    <record id="property_offer_tree" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <tree>
<!--                <field name="pro_name"/>-->
                <field name="partner_id"/>
                <field name="property_type_id"/>
                <field name="offer_amount"/>
            </tree>

        </field>
    </record>
    <record id="property_offer_id" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="partner_id"/>
                    <field name="offer_amount"/>
                    <field name="validity"/>
                    <field name="deadline"/>
                    <field name="status"/>

                </group>
            </sheet>
        </form>
        </field>
    </record>
    <record id="property_tag_id" model="ir.ui.view">
        <field name="name">Property Tags</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="property_tags"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>
 <record model="ir.ui.view" id="property_type_id">
        <field name="name">Property types</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="property_types"/>
                    </group>
                </sheet>
            </form>
        </field>
 </record>
<record id="property_view_form" model="ir.ui.view">
<field name="name">estate  model</field>
<field name="model">estate.model</field>
<field name="arch" type="xml">
    <form name="name">
        <header>
            <button name="button_send" string="Send offer" states="offer_received" class="oe_highlight" type="object"/>
            <button name="button_accept" string="Accept" type="object"/>
            <button name="button_refuse" string="Refuse" type="object"/>
            <field name="status" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,cancelled"/>
        </header>
        <sheet>
        <div id="pro_name">
        <h1><field name="name"/></h1>
        </div>
        <field name="property_tags_id" widget="many2many_tags"/>
        <group>
            <group>
                <field name="property_types_id"/>
                <field name="postcode"/>
            </group>
            <group>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="best_offer" readonly="True"/>
                <field name="selling_price"/>
            </group>
            <notebook style="width:100%;">
                <page string="Description">
                    <group colspan="2">
                    <field name="description"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="garage"/>
<!--                    <field name="status"/>-->
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                </group>
                </page>
                <page string="Offers">
                    <group colspan="2">
                          <field name="offers_ids">
                                <tree>
<!--                                    <field name="pro_name"/>-->
                                    <field name="partner_id"/>
<!--                                    <field name="property_type_id"/>-->
                                    <field name="offer_amount"/>
                                    <field name="validity"/>
                                    <field name="deadline"/>
<!--                                    <field name="status"/>-->
                                </tree>
                          </field>
                    </group>

                </page>
                <page string="Other Info">
                    <group colspan="2">
                        <field name="user_id"/>
                        <field name="buyer_id"/>
                    </group>
                </page>
            </notebook>
    </group>
    </sheet>
</form>
</field>
</record>
<menuitem id="estate_menu_root" name="Real estate"/>
